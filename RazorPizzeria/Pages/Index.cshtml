@page
@model IndexModel
@{
    ViewData["Title"] = "Razor Pizzeria Homepage";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">
            Our great selection of Pizzas</h1>
            <h4>Choose one, or try our Pizza Builder! Then Order and Done!</h4>
            <h4>No need to give any of your details!</h4>
            <h4>We already know everything!</h4>
            <p class="smallText"><i>Only one pizza per order.</i></p>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                        <img src="~/images/Pizzas/Create.png" class="w-100"/>
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-middle makeYourOwnText">
                            <h3 style="text-align: left;">Create your own Pizza!</h3>
                            <p style="text-align: left;">Make your own Pizza with our Pizza Creator!</p>
                            <a class="btn btn-primary" style="float: left" asp-area="" asp-page="Forms/CustomPizza">Try now!</a>   
                        </div>
                    </div>
                </div>
            </div>
            @foreach (var pizza in Model.fakePizzaDB)
            {
                var imagePath = "/images/Pizzas/" + (pizza.ImageTitle + ".png");
                <div class="col-sm-12">
                    <a asp-area="" asp-page="Checkout/Checkout" asp-route-PizzaName="@pizza.PizzaName" asp-route-ImageTitle="@pizza.ImageTitle" asp-route-PizzaPrice="@pizza.FinalPrice">
                        <div class="psuper-box" style="float:left">
                            <div class="pcontainer">
                                <div class="pbox">
                                    <div class="picon_bg"></div>
                                </div>
                                    <div class="picon">
                                        <img width="130px" height="130px" viewBox="0 0 42 26" src="@imagePath" />
                                    </div>
                            </div>
                            <div class="ptext">
                                <p class="ptitle">
                                    @pizza.PizzaName
                                </p>
                            </div>
                        </div</a>
                        
                </div>
            }
        </div>
    </div>
</div>

<link rel="stylesheet" type="text/css" href="~/css/site.css">
